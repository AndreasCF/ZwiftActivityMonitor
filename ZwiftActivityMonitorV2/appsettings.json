{
  "Logging": {
    "File": {
      "IncludeScopes": true,
      "CounterFormat": "00",
      "MaxFileSize": 10485760,
      "BasePath": "Logs",
      "LogLevel": {
        "Default": "Warning"
      },
      "Files": [
        { "Path": "ZwiftActivityMonitor-<counter>.log" }
      ]
    },
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  }
}
